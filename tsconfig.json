{
	"compileOnSave": true,
	"compilerOptions": {
		"lib": [
			"es2017",
			"dom",
			"webworker"
		],
		"allowJs": false,
		"target": "es6",
		"outDir": "dist",
		"rootDir": "./",
		"removeComments": false,
		"strict": true,
		"strictPropertyInitialization": false,
		"incremental": true,
		"tsBuildInfoFile": ".tsbuildinfo",
		"preserveConstEnums": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"sourceMap": false
	},
	"exclude": [
		"dist",
		"**/node_modules"
	]
}